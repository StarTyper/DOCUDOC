<h1>New User</h1>

<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :username %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>

    <%= f.input :role, collection: [['Owner', 'owner'], ['Assistant', 'assistant']], include_blank: false %>

    <%= f.input :client_id, as: :hidden, input_html: { value: @user.client_id } %>
    <%= f.input :client, as: :string, input_html: { value: Client.find(@user.client_id).name, readonly: true } do %>
      <span>Client: <%= Client.find(@user.client_id).name %></span>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit "Create User" %>
  </div>
<% end %>
