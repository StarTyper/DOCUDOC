<h1>Edit User</h1>

<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password, hint: 'Leave blank if you do not want to change the password.' %>
    <%= f.input :password_confirmation, hint: 'Leave blank if you do not want to change the password.' %>
    <%= f.input :username %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :role, collection: [['Owner', 'owner'], ['Assistant', 'assistant']], include_blank: false %>

    <%= f.input :client_id, as: :hidden, input_html: { value: @user.client_id } %>
    <div class="readonly-client">
      Client: <strong><%= Client.find(@user.client_id).name %></strong>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>
